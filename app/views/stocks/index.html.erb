<!-- app/views/stocks/index.html.erb -->

<h1>Stocks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ticker</th>
      <th>Price</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.name %></td>
        <td><%= stock.ticker %></td>
        <td><%= number_to_currency(stock.price) %></td>
        <td>
          <%= button_to 'Add to Portfolio', user_stocks_path(stock_id: stock.id), method: :post, class: 'btn btn-primary' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Home', trader_home_path %>
<%= link_to 'My Portfolio', portfolio_user_stocks_path %>

